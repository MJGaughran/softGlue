	field(PORT,"$(IPORT)")
	field(IFACE,"asynUInt32Digital")
	field(ADDR,"$(IADDR)")
}
record(asyn,"$(P)$(H)asyn$(OPORT)") {
	field(PORT,"$(OPORT)")
