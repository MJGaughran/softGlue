# Initialize to "2@" so that blank signals don't blink continuously on startup.
# Note that $(P)$(H)SignalBlink is scan disabled when the first character is
# '2', otherwise all _SigShow records would process at SignalBlink's SCAN rate
# when nobody is pressing the "=" button (setting _Show to 1).
record(stringout,"$(P)$(H)SignalToShow") {
	field(VAL,"2@")
	field(UDF,"0")
	field(OUT,"$(P)$(H)EnableSignalBlink.AA PP")
}
record(scalcout,"$(P)$(H)EnableSignalBlink") {
	field(CALC,"AA[0,1]")
}
record(calcout,"$(P)$(H)SignalBlink") {
	field(SDIS,"$(P)$(H)EnableSignalBlink CP")
	field(DISV,"2")
	field(INPA,"$(P)$(H)SignalBlink NPP")
	field(SCAN,".5 second")
	field(CALC,"A?0:1")
}
record(stringout,"$(P)$(H)NullSigName") {
	field(VAL,"2@")
	field(UDF,"0")
}
record(event,"$(P)$(H)ReadRate") {
	field(VAL,"10")
	field(SCAN,".2 second")
	field(UDF,"0")
}
record(bo,"$(P)$(H)ReadRateON") {
	field(SCAN,".2 second")
	field(UDF,"0")
}
record(bo,"$(P)$(H)ReadRateOFF") {
	field(SCAN,".2 second")
	field(UDF,"0")
}
# EPICS 3.14.8.2 needs this to get scan rates distributed on startup
record(transform,"$(P)$(H)ReadRateInit") {
	field(SCAN,"5 second")
	# cache ReadRateON.SCAN
	field(INPA,"$(P)$(H)ReadRateON.SCAN")
	# set ReadRateON.SCAN to "Passive"
	field(OUTB,"$(P)$(H)ReadRateON.SCAN CA")
	# set ReadRateON.SCAN to cached value
	field(CLCC,"A")
	field(OUTC,"$(P)$(H)ReadRateON.SCAN CA")
	# turn ourself off
	field(OUTD,"$(P)$(H)ReadRateInit.SCAN CA")
}
